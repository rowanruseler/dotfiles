### i3 config file ###
set $mod Mod4

# font
font pango:monospace 8

# floating
floating_modifier $mod

# terminal
bindsym $mod+Return exec termite

# kill
bindsym $mod+Shift+q kill

# menu
#bindsym $mod+d exec dmenu_run
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop --dmenu='dmenu -b -i -p Search:'

# focus
#bindsym $mod+h focus left
#bindsym $mod+j focus down
#bindsym $mod+k focus up
#bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# focus move
#bindsym $mod+Shift+h move left
#bindsym $mod+Shift+j move down
#bindsym $mod+Shift+k move up
#bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split
bindsym $mod+h split h
bindsym $mod+v split v

# fullscreen
bindsym $mod+f fullscreen toggle

# layout
#bindsym $mod+s layout stacking
#bindsym $mod+w layout tabbed
#bindsym $mod+e layout toggle split

# tiling / floating
bindsym $mod+Shift+space floating toggle

# focus tiling / floating
bindsym $mod+space focus mode_toggle

# focus parent
bindsym $mod+a focus parent

# background
exec feh --bg-scale /home/rowan/.config/i3/black.png

# workspaces
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws0 0

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws0

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws0

# reload
bindsym $mod+Shift+c reload

# restart
bindsym $mod+Shift+r restart

# exit
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize
mode "resize" {
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # arrow-keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # exit
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

## colors
# Base
set $background #212121
set $foreground #d9d9d9
set $cursorColor #20bbfc

# Black
set $color0 #212121
set $color8 #424242

# Red
set $color1 #c30771
set $color9 #fb007a

# Green
set $color2 #10a778
set $color10 #5fd7af

# Yellow
set $color3 #a89c14
set $color11 #f3e430

# Blue
set $color4 #008ec4
set $color12 #20bbfc

# Magenta
set $color5 #523c79
set $color13 #6855de

# Cyan
set $color6 #20a5ba
set $color14 #4fb8cc

# White
set $color7 #d9d9d9
set $color15 #f1f1f1

# windows
for_window [class="^.*"] border pixel 2

set $focus #ec7063
set $iocus #52be80
set $uocus #212121

# class                 border  backgr. text    indicator child_border
client.focused          $focus  $focus  $focus  $focus    $focus
client.focused_inactive $iocus  $iocus  $iocus  $iocus    $iocus
client.unfocused        $uocus  $uocus  $uocus  $uocus    $uocus

bar {
    status_command i3blocks -c ~/.config/i3/i3blocks.conf
    position top

    colors {
        background $background
        separator  $cursorColor
        statusline $foreground

        # State             Border  BG      Text
        focused_workspace   $color8 $color8 $color12
        active_workspace    $color8 $color0 $color12
        inactive_workspace  $color8 $color0 $color4
        urgent_workspace    $color8 $color0 $color1
        binding_mode        $color8 $color0 $color12
    }
}

# programs
bindsym $mod+Shift+f exec pcmanfm
bindsym $mod+Ctrl+f exec firefox
bindsym $mod+Ctrl+q exec qutebrowser

# screenshot
bindsym $mod+Print exec gnome-screenshot -a
bindsym $mod+Shift+Print exec gnome-screenshot -w

# touchpad
bindsym $mod+Shift+u exec xinput set-prop "AlpsPS/2 ALPS DualPoint TouchPad" "Device Enabled" 0
bindsym $mod+Shift+i exec xinput set-prop "AlpsPS/2 ALPS DualPoint TouchPad" "Device Enabled" 1

# brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# volume
bindsym XF86AudioRaiseVolume exec amixer set Master 5.0%+
bindsym XF86AudioLowerVolume exec amixer set Master 5.0%-
bindsym XF86AudioMute exec amixer set Master 1+ toggle

# spotifyt controls
bindsym XF86AudioPlay exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
bindsym XF86AudioNext exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
bindsym XF86AudioPrev exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous
bindsym XF86AudioStop exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Stop

# lockscreen
bindsym $mod+Ctrl+l exec physlock

# startup
#bindsym $mod+Shift+m exec --no-startup-id xrandr --output DP1-3 --mode 1920x1080 --output HDMI1 --mode 1920x1080 --right-of DP1-3 --output eDP1 --off
bindsym $mod+Shift+m exec --no-startup-id xrandr --output HDMI1 --mode 2560x1440 --output eDP1 --off
bindsym $mod+Shift+h exec --no-startup-id xrandr --output HDMI1 --mode 1920x1080 --output eDP1 --off
bindsym $mod+Ctrl+m exec --no-startup-id xrandr --output eDP1 --mode 1920x1080 --output HDMI1 --off
exec --no-startup-id compton -f
exec --no-startup-id xset m 0 0
exec --no-startup-id /etc/X11/xinit/xinitrc.d/50-systemd-user.sh
